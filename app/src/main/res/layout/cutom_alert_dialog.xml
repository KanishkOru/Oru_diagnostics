<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialoguebox"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
    android:background="@drawable/dialog_bg_rounded_corner"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/BL_alert_head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="@string/app_name"
        android:textAppearance="@style/dialog_title"
        android:visibility="visible" />

    <TextView
        android:id="@+id/BL_alert_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BL_alert_head"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textAppearance="@style/dialog_mesage" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BL_alert_text"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/BL_alert_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="@string/str_yes"
            android:minWidth="100dp"
            android:minHeight="36dp"
            style="?buttonTestNegativeStyle"
            android:padding="4dp"
            />

        <Button
            android:id="@+id/BL_alert_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="@string/str_no"
            android:minWidth="100dp"
            style="?buttonsTestPositiveStyle"
            android:padding="8dp"
            android:minHeight="36dp"

            />
    </LinearLayout>

</RelativeLayout>