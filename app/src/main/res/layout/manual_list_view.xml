<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="12dp"
    android:id="@+id/llTestContainer"

    >

    <CheckBox
        android:id="@+id/manual_test_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="right"
        />


    <ImageView
        android:id="@+id/images_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:visibility="gone"
        app:srcCompat="@drawable/menu_battery" />


    <com.oruphones.nativediagnostic.common.DiagnosticsTextView
        android:id="@+id/test_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:paddingBottom="@dimen/category_text_padding"
        android:paddingTop="@dimen/category_text_padding"
        android:text="@string/test"
        android:gravity="start|center_vertical"
        style="@style/textStyle_bodyHeading"
        />

</LinearLayout>
