<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/bottomLayout"
    android:orientation="vertical">

    <TextView
        android:id="@+id/summeryContentHeaderText"
        style="@style/summery_screen_heading"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:fontFamily="@font/opensans_medium"
        android:text="@string/suggested_fixes"
        android:textSize="20sp" />


    <View
        android:id="@+id/summeryItemDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/resolution_view_divider"
        android:layout_gravity="bottom"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/summeryContentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>
