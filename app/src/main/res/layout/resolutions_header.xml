<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/auto_tests_bg"
    android:orientation="horizontal"
    android:padding="5dp"
    android:weightSum="5">

    <CheckBox
        android:id="@+id/checkAll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:buttonTint="@color/white"
        android:gravity="center" />

    <LinearLayout
        android:id="@+id/sortByNameContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.5"
        android:gravity="center_vertical">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/roboto_regular"
            android:gravity="center_vertical"
            android:text="@string/str_name"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/category_text_size" />

        <ImageView
            android:id="@+id/sortByName"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center|center_horizontal"
            android:src="@drawable/ic_dropdown" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sortByDateContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.25"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/id_header_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"

            android:fontFamily="@string/roboto_regular"
            android:gravity="center"
            android:text="@string/str_date"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/category_text_size" />

        <ImageView
            android:visibility="visible"
            android:id="@+id/sortByDate"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center|center_horizontal"
            app:srcCompat="@drawable/ic_dropdown" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sortBySizeContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.25"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/id_header_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@string/roboto_regular"
            android:gravity="center"
            android:text="@string/str_size"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/category_text_size" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/sortBySize"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center|center_horizontal"
            app:srcCompat="@drawable/ic_dropdown" />
    </LinearLayout>
</LinearLayout>
