<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/resolution_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:padding="@dimen/result_padding"
             />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/suggested_fixes_ll"
            android:orientation="vertical">

            <TextView
                android:id="@+id/resolution_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/result_padding"
                android:paddingLeft="@dimen/suggested_fix_text"
                android:text="@string/test"
                android:textAppearance="@style/textStyle_subheading" />

            <TextView
                android:id="@+id/resolution_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/suggested_fix_text"
                android:paddingTop="3dp"
                android:paddingBottom="5dp"
                android:textColor="@color/thick_grey"
                android:text="@string/testresult_canbeimproved"
                android:textSize="12sp"
                android:fontFamily="@string/roboto_regular"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical" >
            <ImageView
                android:id="@+id/resolution_nxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/result_padding"
                android:src="@drawable/ic_resolution_next"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider_resoltuon_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/resolution_view_divider"
        android:background="@color/gray"></View>
</LinearLayout>