<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="oval" >
            <stroke
                android:width="3dp"
                android:color="#C24C62" />

            <solid android:color="#CB4961" />

            <corners android:radius="15dp" />

            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval" >
            <solid android:color="@android:color/transparent" />

             <padding
                android:bottom="@dimen/capture_padding_normal"
                android:left="@dimen/capture_padding_normal"
                android:right="@dimen/capture_padding_normal"
                android:top="@dimen/capture_padding_normal" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval" >
            <corners android:radius="15dp"/>
            <solid android:color="#E26E83" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#00000000" />
            <padding android:bottom="-20dp"/>
        </shape>
    </item>

</layer-list>