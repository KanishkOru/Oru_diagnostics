<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E6DFDF" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Progress shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E6DFDF" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Clip progress shape -->
    <item>
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#00FF00" />
                <corners android:radius="10dp" />
            </shape>
        </clip>
    </item>
</layer-list>
