<?xml version="1.0" encoding="utf-8"?>


<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="4000"
    android:fromDegrees="360"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="1400" >

   <shape
       android:innerRadius="12dp"
       android:shape="ring"
       android:thickness="2.5dp"
       android:useLevel="false" >
      <size
          android:height="38dp"
          android:width="58dp" />

      <gradient
          android:centerColor="@color/backgroundColor"
          android:centerY="0.5"
          android:endColor="@color/blue"
          android:startColor="@color/main_bg_gray"
          android:type="sweep"
          android:useLevel="false" />

   </shape>
</rotate>
