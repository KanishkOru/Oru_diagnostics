<resources>

    <!-- Base application theme. -->
    <style name="noTitleDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="backgroundColor">@color/backgroundColor</item>
        <item name="disabledBackgroundColor">@color/low_light_blue</item>
        <item name="buttonsTestPositiveStyle">@style/buttonTestPositive</item>
        <item name="flowButtonStyle">@style/tradeInSelectbutton</item>
        <item name="toolbarColor">@color/white</item>
        <item name="toolbarTextColor">@color/backgroundColor</item>
        <item name="buttonTestNegativeStyle">@style/buttonTestNegative</item>
        <!-- <item name="android:windowIsTranslucent">true</item>-->

        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/blue</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="appBarOverlayStyle">@style/appBarOverlay</item>
        <item name="popupOverlayStyle">@style/popupOverlay</item>

        <item name="android:textColorSecondary">@color/colorPrimaryDark</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="backgroundColor">@color/backgroundColor</item>
        <item name="disabledBackgroundColor">@color/low_light_blue</item>

        <item name="toolbarColor">@color/white</item>
        <item name="toolbarTextColor">@color/backgroundColor</item>
        <item name="buttonsTestPositiveStyle">@style/buttonTestPositive</item>
        <item name="buttonTestNegativeStyle">@style/buttonTestNegative</item>
        <item name="numSelectBackgroundStyle">@drawable/round_corners_white</item>

        <item name="flowButtonStyle">@style/tradeInSelectbutton</item>

        <item name="flowButtonStyle">@style/tradeInSelectbutton</item>

        <!--Alert-->
        <item name="c_alertDialogTheme">@style/alertDialog</item>


    </style>


    <!--MAXICO THEME-->

    <style name="Theme.mexico" parent="AppTheme">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">#085F96</item>
        <item name="colorAccent">@color/blue</item>

        <item name="appBarOverlayStyle">@style/appBarOverlay_mexico</item>
        <item name="popupOverlayStyle">@style/popupOverlay_mexico</item>

        <item name="android:textColorSecondary">@color/colorPrimaryDark</item>
        <item name="backgroundColor">@color/backgroundColor_mexico</item>
        <item name="disabledBackgroundColor">#A25BC500</item>

        <item name="toolbarColor">@color/backgroundColor</item>
        <item name="toolbarTextColor">@color/white</item>
        <item name="buttonsTestPositiveStyle">@style/buttonTestPositive_mexico</item>
        <item name="buttonTestNegativeStyle">@style/buttonTestNegative_mexico</item>
        <item name="flowButtonStyle">@style/tradeInSelectbutton</item>

        <!--Alert-->
        <item name="c_alertDialogTheme">@style/alertDialog_mexico</item>
    </style>

    <!--Mobiru THEME-->

    <style name="Theme.mobiru" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/mobiru_color</item>
        <item name="colorAccent">@color/mobiru_color</item>
        <item name="roundedCornerBoader">@color/mobiru_color</item>

        <item name="appBarOverlayStyle">@style/appBarOverlay_mobiru</item>
        <item name="popupOverlayStyle">@style/popupOverlay_mobiru</item>

        <item name="android:textColorSecondary">@color/colorPrimaryDark</item>
        <item name="backgroundColor">@color/mobiru_color</item>
        <item name="disabledBackgroundColor">@color/mobiru_color</item>

        <item name="toolbarColor">@color/mobiru_app_bar_bg</item>
        <item name="toolbarTextColor">@color/mobiru_app_bar_text_color</item>
        <item name="buttonsTestPositiveStyle">@style/buttonTestPositive_mobiru</item>
        <item name="buttonTestNegativeStyle">@style/buttonTestNegative_mobiru</item>
        <item name="flowButtonStyle">@style/tradeInSelectbutton</item>

        <!--Alert-->
        <item name="c_alertDialogTheme">@style/alertDialog_mobiru</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
